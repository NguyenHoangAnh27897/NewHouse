@model NewHouse.Models.NH_Architec
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmaster/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Quản lí Kiến trúc sư</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Start form -->
        <div class="form-area">
            <div class="row">

                <div class="col-lg-12" id="vn">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Chỉnh sửa Kiến trúc sư</h4>
                            </div>
                        </div>

                        <div class="section-body">
                            <form action="/architectmaster/edit" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Tên Kiến trúc sư (VUI LÒNG NHẬP DƯỚI 200 KÍ TỰ)</label>
                                    <input name="name" maxlength="200" class="form-control" value="@Model.Name" />
                                    <input value="@Model.ID" name="ID" type="hidden" />
                                </div>

                                @if (Model.Avatar != null)
                                {
                                    <div class="form-group">
                                        <label for="exampleFormControlFile1">Hình ảnh đại diện (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1920x1080 HOẶC LỚN HƠN)</label>
                                        <br />
                                        <input type="file" name="avatar" accept="image/*" />
                                        <div class="row">
                                            <div class="col-sm-3 bg-slider" style="background: url('../../Images/NewHouse/imagearchitec/@Model.Avatar') center center no-repeat / cover;">
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="form-group">
                                        <label for="exampleFormControlFile1">Hình ảnh đại diện (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1920x1080 HOẶC LỚN HƠN)</label>
                                        <br />
                                        <input type="file" name="avatar" accept="image/*" />
                                    </div>
                                }

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Miêu tả</label>
                                    <textarea name="des" class="form-control">@Model.Description</textarea>
                                </div>
                                <input class="btn btn-primaryt" type="submit" value="Lưu" />
                            </form>
                        </div>

                    </div>
                </div>
               

            </div>
        </div>
    </div>
</div>

